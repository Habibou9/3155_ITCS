<head>
  <style>
    table, th, td {
      border: 5px solid black;
      border-collapse: collapse;
    }
    
    th, td{
      padding: 10px;
      text-align: left;
    }
  </style>
</head>


<h1>Listing Contacts</h1>
 <%= link_to 'New Contact', new_address_path %>
<table style="width: 80%", align="center">
  <tr style="background-color: grey">
    <th>First Name</th>
    <th>Last Name</th>
    <th>Phone Number</th>
    <th>Email Address</th>
    <th>Home Address</th>
    <th>Company</th>
    <th>Display</th>
    <th>Editing</th>
    <th>Delete</th>
  </tr>
 
  <% @addresses.each do |address| %>
    <tr>
      <td><%= address.FirstName %></td>
      <td><%= address.LastName %></td>
      <td><%= address.PhoneNumber %></td>
      <td><%= address.EmailAddress %></td>
      <td><%= address.HomeAddress %></td>
      <td><%= address.Company %></td>
      <td><%= link_to 'Show informations', address_path(address) %></td>
      <td><%= link_to 'Edit informations', edit_address_path(address) %></td>
      <td><%= link_to 'Delete Contact',
                             address_path(address),
                             method: :delete,
                             data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
